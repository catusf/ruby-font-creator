{
  "name": "hanzi-pinyin-font",
  "description": "Project to create a Chinese font displaying Hanzi (汉字) characters followed by transliteration/pronunciation (Pīnyīn)",
  "main": "index.js",
  "author": [
    "Édouard Lopez",
    "Hugo Lopez"
  ],
  "scripts": {
    "build": "node --max_old_space_size=8192 --optimize_for_size --max_executable_size=4096 --stack_size=4096 --require babel-core/register ./index.js",
    "test": "ava test",
    "precommit": "npm test",
    "reset": "rm build/ -rf; mkdir -p build/svg",
    "install-font": "cp build/ruby-font-creator.ttf ~/.local/share/fonts/",
    "remove-font": "rm --force ~/.local/share/fonts/ruby-font-creator.ttf"
  },
  "dependencies": {
    "jsdom": "9.12.x",
    "jsonfile": "2.4.x",
    "node-tsv-json": "^0.2.1",
    "text-to-svg": "^3.1.0",
    "webfont": "^7.1.1",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "ava": "0.18.x",
    "babel-core": "6.24.x",
    "babel-loader": "6.4.x",
    "babel-plugin-transform-runtime": "6.23.x",
    "babel-preset-es2015": "6.24.x",
    "babel-preset-stage-2": "6.22.x",
    "babel-runtime": "6.23.x",
    "del": "2.2.x",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-config-prettier": "^1.5.0",
    "eslint-plugin-import": "^2.2.0",
    "husky": "0.13.x"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "comments": false
  },
  "version": "0.1.1"
}
